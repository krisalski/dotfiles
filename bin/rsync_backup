#!/bin/bash

if [[ ("$(whoami)" != "root") || (! -z "$SUDO_USER") ]]; then
  echo 'Run this command as root'
  exit
fi

rsync -aAXH --delete --info=progress2 --include="/mnt/Storage/" --exclude={"/home/km/GDrive/","/mnt/Storage/Games/Steam*","/mnt/Storage/Games/steam*","/dev/*","/proc/*","/sys/*","/tmp/*","/run/*","/mnt/*","/media/*","/lost+found"} / $1
